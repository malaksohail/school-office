@model DcssePortal.Model.CoursesScheme

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5 pt-5" style="background-color:#ffecb3;">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <h2>Course Scheme Detail</h2>

            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Department)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Department)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Date)
                    </dd>


                    <dt>
                        File
                    </dt>

                    <dd>
                        @using (Html.BeginForm("download", "CoursesSchemes", FormMethod.Get))
                        {
                            @Html.HiddenFor(x => x.ID)
                            <input type="submit" value="Download File" />
                        }
                    </dd>


                </dl>
            </div>
            <!--Buttons-->

            <p>
                <div class="mr-5 pb-5">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-backspace"></i>
                        <span>
                            <strong>Back to List</strong>
                        </span>
                    </a>
                </div>
            </p>
        </div>
    </div>
</div>
