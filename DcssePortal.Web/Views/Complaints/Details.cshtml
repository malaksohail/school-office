@model DcssePortal.Model.Complaints

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5 pt-5" style="background-color:#ffecb3;">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">

            <h2>Complaints Detail</h2>

            <div>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Detail)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Detail)
                    </dd>

                </dl>
            </div>
            <!--Buttons-->

            <p>
                <div class="mr-5 pb-5">
                    @if (User.IsInRole("Student"))
                    {<a href="@Url.Action("Delete", new { id = Model.ID })" class="btn btn-success mr-5">
                        <i class="fas fa-edit"></i>
                        <span>
                            <strong>Delete</strong>
                        </span>
                    </a>
                    }
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-backspace"></i>
                        <span>
                            <strong>Back to List</strong>
                        </span>
                    </a>
                </div>
            </p>
        </div>
    </div>
</div>