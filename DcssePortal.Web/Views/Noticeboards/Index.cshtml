@model IEnumerable<DcssePortal.Model.Noticeboard>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container mt-5 pb-5" style="color: #566787; background: #f5f5f5; font-family: 'Varela Round', sans-serif; font-size: 15px;">
    <style>
        .rotated {
            transform: rotate(-3deg);
            min-width: 200px
        }
    </style>


    <h2 class="pt-3">
        <b>News</b> Alert!
    </h2>
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Create")" class="btn btn-success float-right mb-2">
            <i class="fas fa-plus-circle"></i>
            <span>
                <strong>Add News</strong>
            </span>
        </a>
    }
</div>
<div class="container" style="color: #566787; background: #f5f5f5; font-family: 'Varela Round', sans-serif; font-size: 15px;">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="rotated">
                    <div class="card-group">
                        <div class="card mt-5" style="width: 300px; color:white; background-color:#660099;">
                            <div class="card-body">
                                <div class="text-right">@Html.DisplayFor(modelItem => item.Date)</div>
                                <hr />
                                <h5 class="card-title" style="color:black"> @Html.DisplayFor(modelItem => item.Title)</h5>
                                <h6 class="card-subtitle mb-2"> @Html.DisplayFor(modelItem => item.Body)</h6>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a href="@Url.Action("Details",new { id=item.ID} )" class="card-link btn btn-dark float-right mt-auto" style="color:white">Check</a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
