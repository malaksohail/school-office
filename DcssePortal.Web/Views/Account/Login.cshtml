@using DcssePortal.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--Internal CSS-->
    <style>
        body {
            background-color: #5F9DA1;
        }
        .abc {
            background-color: #F5DEB4;
        }
    </style>

</head>



<body>
    <div class="container-fluid">
        <img class="img-responsive" style="width:100%; height:150px;" src="~/Images/headerpic.PNG">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="container mt-3">
                <div class="row justify-content-center align-items-center">
                    <div class="col-10 col-md-8 col-lg-6 abc">
                        <div class="text-center p-5">
                            <div class="p-1">
                                <p class="h2">Login</p>
                            </div>


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group form-row mt-3 mb-4">
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Email/UserName" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group form-row mb-4">
                                @*@Html.LabelFor(model => model.AdminPassword, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="d-flex justify-content-around">
                                <div>
                                    <!-- Remember me -->
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                                        <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                                    </div>
                                </div>
                                <div>
                                    <!-- Forgot password -->
                                    <a href="@Url.Action("ForgotPassword","Account")">Forgot password?</a>
                                </div>
                            </div>
                            <div class="form-group form-row mb-1">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="Login" class="btn btn-success btn-lg my-4" />
                                </div>
                            </div>
                            <!-- Register -->
                            @*<p>
                                Not a member?
                                @Html.ActionLink("Register", "Register", "Account")

                            </p>*@
                        </div>
                    </div>
                </div>
            </div>
        }
        <hr />
        <div class="container-fluid">
            <footer class="text-center mt-5">
                <strong>&copy; 2021 International Islamic University Islamabad</strong>
            </footer>
        </div>
    </div>
</body>
</html>



















