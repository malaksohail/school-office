@model DcssePortal.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";

}

    <div class="container mt-5 pt-5" style="background-color:#ffecb3;">
        <div class="row justify-content-center align-items-center">
            <div class="col-10 col-md-8 col-lg-6">
                <h2>@ViewBag.Title.</h2>

                <h4>Create a new account.</h4>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.Email, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter Email" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter Name" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.Label("User Role", new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @*@Html.DropDownList("Name")*@
                            @Html.DropDownListFor(x => x.UserRoles, new List<SelectListItem> { new SelectListItem { Text = "Admin", Value = "Admin" }, new SelectListItem { Text = "Faculty", Value = "Faculty" }, new SelectListItem { Text = "Student", Value = "Student" } },
                           "Select Role",new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group form-row float-right pb-4">
                        <div class="col-md-offset col-md-12 mt-4">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @*<hr />
    <div class="container-fluid fixed-bottom pt-5">
        <footer class="text-center mt-5">
            <strong>&copy; 2021 International Islamic University Islamabad</strong>
        </footer>
    </div>*@

