@model DcssePortal.Model.Content

@{
    ViewBag.Title = "Create";
}

<div class="container mt-5 pt-5" style="background-color:#ffecb3;">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <h3>Create Content</h3>
            <div class="text-danger">
                @Html.ValidationSummary(false)
            </div>

            @using (Html.BeginForm("Create", "Contents", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.Course, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.DropDownList("CourseId", new SelectList(ViewBag.Courses, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Course, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.ContentTitle, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ContentTitle, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Course Title" } })
                            @Html.ValidationMessageFor(model => model.ContentTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.ContentUrl, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.Editor("ContentUrl", new { htmlAttributes = new { @class = "form-control", @type = "file", @accept = "application/pdf" } })
                            @Html.ValidationMessageFor(model => model.ContentUrl, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-actions  mt-5 pb-5">
                        <button type="submit" value="Save" class="btn btn-success mr-5">
                            <i class="fas fa-save"></i>
                            <strong>Save</strong>
                        </button>
                    </div>
                </div>
            }


        </div>
    </div>
</div>