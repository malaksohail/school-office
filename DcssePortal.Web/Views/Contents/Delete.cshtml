@model DcssePortal.Model.Content

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-5 pt-5" style="background-color:#ffecb3;">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <h2>Delete Lecture</h2>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayNameFor(model => model.ContentTitle)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ContentTitle)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Date)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions mt-5 pb-5">
                        <button type="submit" value="Delete" class="btn btn-danger mr-5">
                            <i class="fas fa-trash-alt icon-white"></i>
                            <strong>Delete</strong>
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-backspace"></i>
                            <span>
                                <strong>Back to List</strong>
                            </span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>