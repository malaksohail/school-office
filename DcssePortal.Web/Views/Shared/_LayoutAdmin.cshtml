<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>


    <style>
        body {
            background-color: #5F9DA1;
        }
    </style>

</head>
<body>
    <img class="img-responsive" style="width:100%; height:130px;" src="~/Images/headerpic.PNG">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="font-size:17px">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Manage Student", "Index", "Students", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Manage Faculty", "Index", "Faculties", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Manage Admin", "Index", "Admins", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Manage Result", "Index", "Results", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Course Scheme", "Index", "CoursesSchemes", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("News", "Index", "Noticeboards", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Complaints", "Index", "Complaints", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Check DateSheet", "Index", "DateSheets", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                }
                @if (User.IsInRole("Faculty"))
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Home", "Index", "Courses", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Upload Lecture", "Index", "Contents", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Faculty News", "Index", "Noticeboards", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Give Course Feedbacks", "Index", "Feedbacks", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Check DateSheet", "Index", "DateSheets", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Course Scheme", "Index", "CoursesSchemes", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                }
                @if (User.IsInRole("Student"))
                {
                    <li class="nav-item active">
                        @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Course Scheme", "Index", "CoursesSchemes", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("News", "Index", "Noticeboards", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Complaints", "Index", "Complaints", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Check DateSheet", "Index", "DateSheets", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Results", "Index", "Results", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("About Us", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                }
            </ul>

        </div>
        <ul class="navbar-nav navbar-right" style="clear: both;">

            @if (User.Identity.IsAuthenticated) { 
                <li class="nav-item ">
                    <a class="nav-link" href="@Url.Action("LogOff", "Account")" role="button">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>
                            <strong style="font-size:20px;">Log Off</strong>
                        </span>
                    </a>

                </li>
            }
            else{
            <li class="nav-item ">
                <a class="nav-link" href="@Url.Action("Login", "Account")" role="button">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>
                        <strong style="font-size:20px;">Log in</strong>
                    </span>
                </a>

            </li>
            }
        </ul>
    </nav>

    @RenderBody()

    <hr />
    <div class="container-fluid">
        <footer class="text-center mt-5">
            <strong>&copy; 2021 International Islamic University Islamabad</strong>
        </footer>
    </div>

</body>
</html>
