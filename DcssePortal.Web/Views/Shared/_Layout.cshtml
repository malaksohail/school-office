<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>


    <style>
        body {
            background-color: #5F9DA1;
        }
    </style>

</head>
<body>
    <img class="img-responsive" style="width:100%; height:130px;" src="~/Images/headerpic.PNG">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="font-size:15px">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Manage Student", "Index", "Students", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Manage Faculty", "Index", "Faculties", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Manage Admin", "Index", "Admins", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Manage Result", "Index", "Results", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Course Scheme", "Index", "CoursesSchemes", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("News", "Index", "Noticeboards", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Complaints", "Index", "Complaints", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Check DateSheet", "Index", "DateSheets", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About Us", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                }
                @if (User.IsInRole("Faculty"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Course Scheme", "Index", "CoursesSchemes", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Courses", "Index", "Courses", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Feedbacks", "Index", "Courses", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("News", "Index", "Noticeboards", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Complaints", "Index", "Complaints", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Check DateSheet", "Index", "DateSheets", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("About Us", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                }
            </ul>
        </div>
        <ul class="navbar-nav navbar-right" style="clear: both;">

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <strong style="font-size:20px;">My Account</strong>
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="#">Profile</a>

                    <a class="dropdown-item" href="@Url.Action("LogOff", "Account")">Logout</a>
                </div>
            </li>
        </ul>
    </nav>

    @RenderBody()

    <hr />
    <div class="container-fluid">
        <footer class="text-center mt-5">
            <strong>&copy; 2021 International Islamic University Islamabad</strong>
        </footer>
    </div>

</body>
</html>
