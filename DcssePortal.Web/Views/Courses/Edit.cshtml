@model DcssePortal.Model.Course

@{
    ViewBag.Title = "Edit";
}
<div class="container mt-5 pt-5" style="background-color:#ffecb3;">
    <div class="row justify-content-center align-items-center">
        <div class="col-10 col-md-8 col-lg-6">
            <h3>Edit Course</h3>

            <div class="text-danger">
                @Html.ValidationSummary(false)
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.HiddenFor(model => model.ID)

                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.CourseCode, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CourseCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Course Code" } })
                            @Html.ValidationMessageFor(model => model.CourseCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.CourseTitle, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CourseTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Course Title" } })
                            @Html.ValidationMessageFor(model => model.CourseTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.CreditHour, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CreditHour, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Credit Hour" } })
                            @Html.ValidationMessageFor(model => model.CreditHour, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group form-row mt-3 mb-1">
                        @Html.LabelFor(model => model.SecretCode, htmlAttributes: new { @class = "control-label ml-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.SecretCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Course Code" } })
                            @Html.ValidationMessageFor(model => model.SecretCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <!--Buttons-->

                    <div class="form-actions  mt-5 pb-5">
                        <button type="submit" value="Save" class="btn btn-success mr-5">
                            <i class="fas fa-save"></i>
                            <strong>Save</strong>
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-backspace"></i>
                            <span>
                                <strong>Back to List</strong>
                            </span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

